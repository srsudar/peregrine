{
  "name": "Peregrine",
  "version": "1.0.2",
  "manifest_version": 3,
  "description": "An extension that allows users to easily navigate to saved urls.",
  "omnibox": {
    "keyword": ";"
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "Peregrine",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "settings.html",
        "styles/settings.css",
        "styles/main.css",
        "styles/common.css",
        "scripts/settings.js",
        "scripts/common.js",
        "scripts/popup.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
